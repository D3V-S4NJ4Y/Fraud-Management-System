generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  phone     String?
  role      UserRole @default(VICTIM)
  isActive  Boolean  @default(true)
  lastLogin DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  complaints Complaint[]
  notifications Notification[]
  sessions Session[]
  auditLogs AuditLog[]
}

model Complaint {
  id              String            @id @default(cuid())
  complaintId     String            @unique
  victimId        String
  victimName      String
  victimEmail     String
  victimPhone     String
  fraudType       FraudType
  fraudAmount     Float
  fraudDate       DateTime
  fraudDescription String
  bankName        String?
  accountNumber   String?
  transactionId   String?
  status          ComplaintStatus   @default(PENDING)
  priority        Priority          @default(MEDIUM)
  policeStation   String?
  district        String?
  assignedOfficer String?
  cfccrmsId       String?
  helpline1930Id  String?
  firNumber       String?
  firDate         DateTime?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  
  victim          User?             @relation(fields: [victimId], references: [id])
  bankActions     BankAction[]
  refunds         Refund[]
  notifications   Notification[]
  caseUpdates     CaseUpdate[]
  evidences       Evidence[]
}

model BankAction {
  id              String        @id @default(cuid())
  complaintId     String
  bankName        String
  branchName      String?
  accountNumber   String
  actionType      BankActionType
  amount          Float?
  status          ActionStatus  @default(PENDING)
  referenceNumber String?
  requestedAt     DateTime      @default(now())
  completedAt     DateTime?
  notes           String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  complaint       Complaint     @relation(fields: [complaintId], references: [id])
}

model Refund {
  id              String        @id @default(cuid())
  complaintId     String
  amount          Float
  refundDate      DateTime
  bankName        String
  accountNumber   String
  transactionId   String?
  status          RefundStatus  @default(PENDING)
  refundMethod    String?
  processedBy     String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  complaint       Complaint     @relation(fields: [complaintId], references: [id])
}

model CaseUpdate {
  id          String        @id @default(cuid())
  complaintId String
  title       String
  description String
  status      ComplaintStatus
  updatedBy   String
  createdAt   DateTime      @default(now())
  
  complaint   Complaint     @relation(fields: [complaintId], references: [id])
}

model Evidence {
  id          String       @id @default(cuid())
  complaintId String
  fileName    String
  filePath    String
  fileType    String
  fileSize    Int
  description String?
  uploadedAt  DateTime     @default(now())
  
  complaint   Complaint    @relation(fields: [complaintId], references: [id])
}

model Notification {
  id            String           @id @default(cuid())
  userId        String?
  complaintId   String?
  title         String
  message       String
  type          NotificationType
  channel       NotificationChannel
  status        NotificationStatus @default(PENDING)
  scheduledAt   DateTime?
  sentAt        DateTime?
  createdAt     DateTime         @default(now())
  
  user          User?            @relation(fields: [userId], references: [id])
  complaint     Complaint?       @relation(fields: [complaintId], references: [id])
}

model NodalOfficer {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  phone         String
  department    String
  designation   String
  district      String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model FraudTypology {
  id            String   @id @default(cuid())
  type          String   @unique
  description   String
  category      String
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  resource  String
  resourceId String?
  details   String?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  
  user      User?    @relation(fields: [userId], references: [id])
}

model RateLimit {
  id        String   @id @default(cuid())
  key       String   @unique
  count     Int      @default(1)
  resetAt   DateTime
  createdAt DateTime @default(now())
}

enum UserRole {
  VICTIM
  POLICE_OFFICER
  BANK_OFFICER
  NODAL_OFFICER
  ADMIN
}

enum FraudType {
  PHISHING
  ONLINE_SHOPPING
  BANKING_FRAUD
  INVESTMENT_SCAM
  JOB_SCAM
  MATRIMONIAL_SCAM
  LOTTERY_SCAM
  UPI_FRAUD
  CARD_FRAUD
  OTHER
}

enum ComplaintStatus {
  PENDING
  IN_PROGRESS
  UNDER_INVESTIGATION
  BANK_FREEZE_REQUESTED
  FUNDS_FROZEN
  REFUND_PROCESSING
  REFUNDED
  CLOSED
  REJECTED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum BankActionType {
  FREEZE_ACCOUNT
  FREEZE_TRANSACTION
  HOLD_FUNDS
  INVESTIGATE_TRANSACTION
  COOPERATE_WITH_INVESTIGATION
}

enum ActionStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
  CANCELLED
}

enum RefundStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum NotificationType {
  COMPLAINT_REGISTERED
  STATUS_UPDATE
  BANK_ACTION
  REFUND_UPDATE
  AWARENESS_ALERT
  SYSTEM_NOTIFICATION
}

enum NotificationChannel {
  SMS
  EMAIL
  WHATSAPP
  IN_APP
}

enum NotificationStatus {
  PENDING
  SENT
  FAILED
  CANCELLED
}